<div class="container-login">
  <div class="user-login-signup">
    <%= simple_form_for [ @activity, @booking ] do |f| %>
      <%= f.input :start_date %>
      <%= f.input :end_date %>
      <%= f.submit "Submit booking", class: "btn btn-primary" %>
    <% end %>
  </div>
  <div class="additional-section">
    <%= link_to 'Back', activity_path(@activity) %>
  </div>
</div>

