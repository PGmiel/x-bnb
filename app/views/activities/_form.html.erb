<%= simple_form_for(@activity) do |f| %>
  <%= f.input :name %>
  <%= f.association :categories, input_html: { class: 'select2' } %>
  <%= f.input :description %>
  <%= f.input :address %>
  <%= f.input :price %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <%= f.submit %>
<% end %>
