<div class="container">
  <h2>My activities</h2>
  <ul>
    <% current_user.activities.each do |activity| %>
      <li><%= link_to activity.name, activity_path(activity) %> </li>
    <% end %>
  </ul>
  <div>
    <%= link_to "Create an activity", new_activity_path, class: "btn btn-primary" %>
    <%= link_to "Back to Home page", root_path, class: "btn btn-primary" %>
  </div>
</div>
