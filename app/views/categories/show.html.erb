<div class="container mt-5">
  <h2> list of Activities for <%= @category.name %></h2>
  <div class='main-container'>
    <div class='cards-products'>
      <ul class='list-item-padding'>
      <% @category.activities.first(10).each do |activity| %>
        <span>
          
            <div class="card-product">
              <img src="../assets/images/ferrari.jpg" />
                <div class="card-product-infos">
                  <h2><%= link_to activity.name, activity_path(activity) %></h2>
                  <p> <strong><%=activity.address%></strong > <span class='card-product-infos-price'>price <%=activity.price%>â‚¬</span></p>
                </div>
            </div>    
        </span>
      <% end %>
      </ul>
    </div>
    <div id="map"
      style="width: 100%; height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  </div>
</div>