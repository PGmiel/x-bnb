<div class="container mt-5">
  <h2> List of Activities for <%= @category.name %></h2>
  <div class='main-container'>
    <div class='cards-products'>
      
      <% @category.activities.first(10).each do |activity| %>
        
          
            <div class="card-product">
              <img src="../assets/images/ferrari.jpg" />
                <div class="card-product-infos">
                  <h2><%= link_to activity.name.capitalize, activity_path(activity) %></h2>
                  <p> <strong><%=activity.address.capitalize%></strong > <span class='card-product-infos-price'>Price <%=activity.price%>â‚¬</span></p>
                </div>
            </div>    
       
      <% end %>
     
    </div>
    <div id="map"
      style="width: 100%; height:700px; border-radius:5px"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  </div>
</div>