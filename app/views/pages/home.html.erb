<%= render 'shared/navbar' %>
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path "banner_rv4zbx" %>')">
  <div class="container-for-form">
    <div class="container-search-banner">
      <p>Go Here!</p>
        <div class="form">
          <%= simple_form_for :query_id , url: categories_path, method: :get do |f| %>
             <div class="form-infos d-flex align-items-center">
              <%= f.input :categories, :collection => @categories.all.map(&:name), label: false %>
              <%= f.button :submit, 'Search' %>
            </div>
          <% end %>
        </div>
    </div>
  </div>
  <div class="container">
    <div class="banner-position">
      <div class="container-host one">
      <h1>xBnB</h1>
      <h1>Brings <strong>adrenaline</strong> to <strong>everyone</strong>!</h1>
      <p>Change your life and try the eXtreme</p>
      </div>
    </div>
  </div>
</div>

<div class="categories">
  <div class="categories-title">
    <h1>Discover the categories!</h1>
  </div>
  <div class="row">
  <% @categories.each do |category| %>
    <div class="col-lg-3 col-md-6 col-sm-6">
      <div class="card">
        <%= link_to category.name, category_path(category), class: "cat-btn"  %>
        <%= cl_image_tag ("bike_kjfsvx") %>
      </div>
    </div>
  <% end %>
  </div>
</div>
<div class="host-container">
  <div class="become-host" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= asset_path "become_host.jpg" %>);">
    <div class="container">
      <h1>Become a Host</h1>
      <p>Earn extra income and unlock new opportunities by sharing your gear.</p>
      <%= link_to "Learn More", host_path, class: "btn btn-dark" %>
    </div>
  </div>
</div>

