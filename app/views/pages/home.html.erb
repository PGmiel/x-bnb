<%= render 'shared/navbar' %>
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path "banner_rv4zbx" %>')">
  <div class="container">
      <h1>xSports bnb brings <strong>adrenaline</strong> to <strong>everyone</strong>!</h1>
      <p>Change your life and try new extreme sports</p>
      <a class="btn btn-flat" href="#">Learn what's new</a>
    <div class="form">
      <p>Quick search Here!</p>
      <%= form_tag activities_path, method: :get do %>
        <%= select_tag :category,
        options_from_collection_for_select(Category.all, "id", "name"),
          class: "form-control",
          placeholder: "Find a activity"
        %>
        <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
