<div class='fixed-top'><%= render 'shared/navbar' %></div>
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path "banner_rv4zbx" %>')">
  <div class="container">
    <div class="flex-host">
      <div class="container-host one">
      <h1>xSports bnb brings <strong>adrenaline</strong> to <strong>everyone</strong>!</h1>
      <p>Change your life and try new extreme sports</p>
      </div>
    <div class="container-host-two">
    <div class="form">
      <p>Quick search!</p>
      <%= form_tag activities_path, method: :get do %>
        <%= select_tag :category,
        options_from_collection_for_select(Category.all, "id", "name"),
          class: "form-control",
          placeholder: "Find a activity"
        %>
      <% end %>
      <%= submit_tag "Search", class: "btn btn-primary text-left" %>
    </div>
    </div>
    </div>
  </div>
</div>

<div class="categories">
  <div class="categories-title">
    <h1>Discover the categories!</h1>
  </div>
  <div class="row">
  <% @categories.each do |category| %>
    <div class="col-lg-3 col-md-6 col-sm-6">
      <div class="card">
        <%= cl_image_tag ("bike_kjfsvx") %>
        <div class="card-infos">
          <div>
            <h2><%= link_to category.name, category_path(category)  %></h2>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>
<div class="host-container">
  <div class="become-host" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= asset_path "become_host.jpg" %>);">
    <div class="container">
      <h1>Become a Host</h1>
      <p>Earn extra income and unlock new opportunities by sharing your gear.</p>
      <%= link_to "Learn More", host_path, class: "btn btn-dark" %>
    </div>
  </div>
</div>

