<div class="container">
  <%= simple_form_for [ @activity, @review ] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating %>
    <%= f.submit "Update", class: "btn btn-primary" %>
  <% end %>

  <%= link_to 'Delete', activity_review_path(@review),
          method: :delete,
          data: { confirm: "Are you sure?" } %>
  <%= link_to 'Cancel', :back %>
</div>
